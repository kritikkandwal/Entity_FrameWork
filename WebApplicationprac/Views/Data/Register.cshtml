@using WebApplicationprac.Models
@model RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">

    <style>
        body {
            min-height: 100vh;
            background: radial-gradient(circle at top, #0f2027, #000);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Poppins', sans-serif;
        }

        .glass-card {
            width: 420px;
            padding: 35px;
            border-radius: 18px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(18px);
            border: 1px solid rgba(255, 255, 255, 0.15);
            box-shadow: 0 0 40px rgba(0, 245, 255, 0.15);
            color: #fff;
        }

            .glass-card h2 {
                text-align: center;
                margin-bottom: 25px;
                font-weight: 600;
                letter-spacing: 1px;
            }

        .form-control {
            background: transparent;
            border-radius: 12px;
            border: 1px solid rgba(255,255,255,0.3);
            color: #fff;
        }

            .form-control::placeholder {
                color: rgba(255,255,255,0.6);
            }

            .form-control:focus {
                background: transparent;
                border-color: #00f5ff;
                box-shadow: 0 0 10px #00f5ff;
                color: #fff;
            }

        .btn-neon {
            width: 100%;
            padding: 12px;
            border-radius: 30px;
            border: none;
            background: linear-gradient(135deg, #00f5ff, #0066ff);
            color: #000;
            font-weight: 600;
            letter-spacing: 1px;
            transition: 0.3s ease;
        }

            .btn-neon:hover {
                box-shadow: 0 0 20px #00f5ff;
                transform: translateY(-2px);
            }

        .login-link {
            text-align: center;
            margin-top: 18px;
            font-size: 14px;
            opacity: 0.85;
        }

            .login-link a {
                color: #00f5ff;
                text-decoration: none;
                font-weight: 500;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>

<body>

    <div class="glass-card">
        <h2>Create Account</h2>

        <form method="post">
            <div class="mb-3">
                <input asp-for="Name"
                       type="text"
                       class="form-control"
                       placeholder="Full Name"
                       required />
            </div>

            <div class="mb-3">
                <input asp-for="Email"
                       type="email"
                       class="form-control"
                       placeholder="Email Address"
                       required />
            </div>

            <div class="mb-4">
                <input asp-for="Password"
                       type="password"
                       class="form-control"
                       placeholder="Password"
                       required />
            </div>

            <!-- DATE OF BIRTH -->
            <div class="mb-3">
                <input asp-for="DateOfBirth"
                       type="date"
                       class="form-control"
                       required />
            </div>

            <!-- STATUS -->
            <div class="mb-3">
                <select asp-for="Status"
                        class="form-control"
                        required>
                    <option value="">--Select--</option>
                    <option value="true">Active</option>
                    <option value="false">InActive</option>
                  
                </select>
            </div>
            <input type="submit" name="submit" value="register " class="btn btn-neon" />
           
        </form>



        <!-- BACK TO LOGIN -->
        <div class="login-link">
            Already have an account?
            <a href="/AccountsController1/Login">Back to Login</a>
        </div>
    </div>

</body>
</html>
